package selenium_project;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.edge.EdgeDriver;

public class SecondSeleniumTest{
public static void main(String[] args) throws InterruptedException 
{
	System.setProperty("webdriver.edge.driver", "C:\\webdrivers\\msedgedriver.exe"); 
	WebDriver driver = new EdgeDriver();

driver.get("https://www.saucedemo.com/"); driver.manage().window().maximize(); System.out.println(driver.getTitle());

driver.findElement(By.id("user-name")).sendKeys("standard_user"); 
Thread.sleep(4000); driver.findElement(By.id("password")).sendKeys("secret_sauce");
Thread.sleep(4000);
driver.findElement(By.id("login-button")).click();
}
}
